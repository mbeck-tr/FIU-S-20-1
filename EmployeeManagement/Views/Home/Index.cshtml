@model IEnumerable<EmployeeManagement.Models.Employee>

        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Department</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>
                            @employee.Id
                        </td>
                        <td>
                            @employee.Name
                        </td>
                        <td>
                            @employee.Department
                        </td>		 
                    </tr>
	            }
            </tbody>
        </table>

@section Script{ 
 <script src="~/scripts/custom2.js"></script>
}
