@model IEnumerable<EmployeeManagement.Models.Employee>
@*
    Über _ViewImports.cshtml importiert
    @addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
*@

<div class="card-deck">
    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="~/Bilder/noimage.png" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a href="/home/details/@employee.Id" class="btn btn-secondary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>

@section Script{
    <script src="~/scripts/custom2.js"></script>
}
